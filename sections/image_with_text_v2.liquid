{% stylesheet %}
  .image-with-text__content {
      display: grid;
      grid-template-columns: 1fr;
  }

  .image-with-text__content--mobile {
    display: flex;
    flex-direction: column;
  }

  .image-with-text__content--mobile *:not(.block__image) {
    padding: 0 16px;
  }

  .image-with-text__content--desktop {
      display: none;
  }

  /* Image margins */
  .image-with-text__content .block__image {
    grid-column: 1;
    width: 100%;
    position: relative;
    display: flex;
  }

  /* Paragraph margins */
  .image-with-text__content .block__paragraph {
    letter-spacing: -0.1px;
  }

  /* Button margins */
  .image-with-text__content .block__button {
      grid-column: 1;
      display: flex;
      align-items: center;
      width: 100%;
  }

  /* Buttons margins */
  .image-with-text__content .block__buttons {
      grid-column: 1;
      display: flex;
      flex-direction: row;
      align-items: center;
      width: 100%;
  }

  .image-with-text__content .block__buttons{
    gap: 16px;
  }

  @media screen and (min-width: 768px) {

    .image-with-text__content--mobile {
        display: none;
    }

    .image-with-text__content--desktop {
        display: grid;
        align-items: center;
    }

    .image-with-text__content__left {
        flex: 1 0 auto;
    }

    .image-with-text__content__right {
        flex: 1 0 auto;
        display: flex;
        align-items: center;
        height: 100%;
    }

    .image-with-text__content__right--wrapper {
        max-width: 100%;
        width: 100%;
        display: grid;
        grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

{%- capture mobile_content -%}
  <div class="image-with-text__content--mobile">
    {% for block in section.blocks %}
      {%- case block.type -%}
        {%- when 'image' -%}
          {%- assign sizes = "(max-width: 768px) calc(100vw - 32px)" -%}
          {% render 'image_v2', block: block, sizes: sizes %}
        {%- when 'title' -%}
          {% liquid
              assign margin_top = block.settings.margin_top
              assign margin_bottom = block.settings.margin_bottom
            %}
          {% render 'title_v2', 
            block: block,
            margin_top: margin_top,
            margin_bottom: margin_bottom,
            default_font_size_desktop: 36, 
            default_font_size_mobile: 32,
            default_color: settings.heading_color
          %}
        {%- when 'paragraph' -%}
          {% liquid
            assign margin_top = block.settings.margin_top
            assign margin_bottom = block.settings.margin_bottom
          %}
          
          {% render 'paragraph_v2',margin_top: margin_top, margin_bottom: margin_bottom, block: block, default_color: settings.paragraph_color %}
        {%- when 'button' -%}
          {% liquid
            assign margin_top = block.settings.margin_top | divided_by: 2
            assign margin_bottom = block.settings.margin_bottom | divided_by: 2

            assign id = block.id | append: '-mobile'
          %}
          {% render 'button_v2', block: block, block_id: id, tag: "mobile", top_padding: margin_top, bottom_padding: margin_bottom %}
        {%- when 'buttons' -%}
          {% liquid
            assign margin_top = block.settings.margin_top
            assign margin_bottom = block.settings.margin_bottom

            assign id = block.id | append: '-desktop'
          %}

          {% render 'buttons_v2', block: block, visible_on_desktop: true, visible_on_mobile: true, block_id: id, tag: "mobile", top_padding: margin_top, bottom_padding: margin_bottom %}
      {%- endcase -%}
    {% endfor %}
  </div>
{%- endcapture -%}

