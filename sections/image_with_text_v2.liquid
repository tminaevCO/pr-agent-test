{% liquid
  assign content_alignment = section.settings.content_alignment
  assign content_alignment_mobile = section.settings.content_alignment_mobile
  assign column_balance = section.settings.column_balance
  assign background_color = section.settings.background_color
  assign column_gap = section.settings.column_gap

  assign image_background_color = section.settings.image_background_color
  if image_background_color.alpha == null or image_background_color.alpha == 0.0
    assign image_background_color = settings.image_background_color
  endif

  assign top_margin = section.settings.top_margin
  assign bottom_margin = section.settings.bottom_margin

  assign top_padding = section.settings.top_padding
  assign bottom_padding = section.settings.bottom_padding

  assign top_padding_mobile = top_padding | divided_by: 2
  assign bottom_padding_mobile = bottom_padding | divided_by: 2

  assign background_color = section.settings.background_color
  assign fullwidth_background = section.settings.fullwidth_background
  assign side_padding = section.settings.side_padding

  assign grid_rows = 0

  assign first_block = section.blocks | first
  assign image_block = section.blocks | where: 'type', 'image' | first

  if first_block.type == 'image'
    assign desktop_alignment = 'image_first'
  else
    assign desktop_alignment = 'text_first'
  endif

  if image_block.settings.shape == 'default'
    assign container_classes = 'default-image'
  elsif image_block.settings.shape == 'circle'
    assign container_classes = 'circle-image'
  elsif image_block.settings.shape == 'square'
    assign container_classes = 'square-image'
  endif

  for block in section.blocks
    assign grid_rows = grid_rows | plus: 1
  endfor

  if background_color.alpha and background_color.alpha != 0.0
    assign has_background = true
  endif

  assign absolute_column_balance = column_balance | abs
  assign absolute_percentage = absolute_column_balance | divided_by: 50.0
  assign column_percentage = 3 | times: absolute_percentage

  if column_percentage < 1
    assign column_percentage = column_percentage | times: 0.1 | plus: 1.0
  endif
%}

{% style %}
  #shopify-section-{{section.id}} {
    margin-top: {{top_margin | divided_by: 2}}px;
    margin-bottom: {{bottom_margin | divided_by: 2}}px;
  }

  #shopify-section-{{section.id}} .svg-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    background-color: {{image_background_color}};
    stroke: {{settings.icon_color}};
    fill: {{settings.icon_color}};
    width: 100%;
    height: 100%;
  }

  #shopify-section-{{section.id}} .image-with-text__inner {
    padding-top: {{top_padding_mobile}}px;
    padding-bottom: {{bottom_padding_mobile}}px;
    background-color: {% if background_color.alpha and background_color.alpha != 0.0 %}{{background_color}}{% endif %};
  }

  {% if background_color.alpha != null and background_color.alpha != 0.0 %}
    {% if fullwidth_background %}
      #shopify-section-{{ section.id }} {
        background-color: {{background_color}};
        max-width: 100%;
        padding-top: {{top_padding}}px;
        padding-bottom: {{bottom_padding}}px;
        padding-left: 0;
        padding-right: 0;
      }

      #shopify-section-{{ section.id }} .image-with-text__inner {
        max-width: {{ settings.page_width }}px;
        margin: 0 auto;
        padding-left: 16px;
        padding-right: 16px;
      }
    {% else %}
      #shopify-section-{{ section.id }}{
        background-color: {{background_color}};
        padding-top: {{top_padding}}px;
        padding-bottom: {{bottom_padding}}px;
        padding-left: {{side_padding}}px;
        padding-right: {{side_padding}}px;
        box-sizing: border-box;
      }
    {% endif %}
  {% endif %}

