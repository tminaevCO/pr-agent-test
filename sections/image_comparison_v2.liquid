{% style %}
  #shopify-section-{{section.id}} {
    margin-top: {{top_margin | divided_by: 2}}px;
    margin-bottom: {{bottom_margin | divided_by: 2}}px;
  }

  {% if section_background_color.alpha != null and section_background_color.alpha != 0.0 %}
    {% if fullwidth_background %}
      #shopify-section-{{ section.id }} {
        background-color: {{section_background_color}};
        max-width: 100%;
        padding-top: {{top_padding}}px;
        padding-bottom: {{bottom_padding}}px;
        padding-left: 0;
        padding-right: 0;
      }

      #shopify-section-{{ section.id }} .image-comparison--inner {
        max-width: {{ settings.page_width }}px;
        margin: 0 auto;
        padding-left: 16px;
        padding-right: 16px;
      }
    {% else %}
      #shopify-section-{{ section.id }}{
        background-color: {{section_background_color}};
        padding-top: {{top_padding}}px;
        padding-bottom: {{bottom_padding}}px;
        padding-left: {{side_padding}}px;
        padding-right: {{side_padding}}px;
        box-sizing: border-box;
      }
    {% endif %}
  {% endif %}

  #shopify-section-{{section.id}} .image-comparison__slider {
    padding-bottom: {{section_aspect_ratio}}%;
    border-radius: {{settings.border_radius}}px;
  }

  #shopify-section-{{section.id}} .svg-placeholder {
    background-color: {{settings.image_background_color}};
    stroke: {{settings.icon_color}};
    fill: {{settings.icon_color}};
  }

  #shopify-section-{{section.id}} .svg-placeholder--invert {
    background-color: {{settings.icon_color}};
    stroke: {{settings.image_background_color}};
    border-radius: calc({{settings.border_radius}}px + 1px);
    fill: {{settings.image_background_color}};
  }

  #shopify-section-{{section.id}} .image-comparison__slider-divider__circle {
    background-color: {% if background_color.alpha and background_color.alpha != 0.0 %}{{background_color}}{% else %}{{settings.primary_background_color}}{% endif %}
  }

  #shopify-section-{{section.id}} .image-comparison__slider-divider__line {
    background-color: {% if background_color.alpha and background_color.alpha != 0.0 %}{{background_color}}{% else %}{{settings.primary_background_color}}{% endif %};
    width: {{divider_thickness}}px;
  }
  #shopify-section-{{section.id}} .image-comparison__content {
    display: grid;
    grid-gap: {{column_gap}}px;
  }
  /* POSITION */
  {% if has_aside %}
    #shopify-section-{{section.id}} .image-comparison__content {
      {% if column_balance == 0 and section.blocks.size >= 1 %}
        grid-template-rows: minmax(200px, 1fr) minmax(0px, 1fr);
        grid-template-columns: 1fr;
      {% elsif column_balance > 0 and section.blocks.size >= 1 %}
        grid-template-rows: minmax(200px, {{column_percentage}}fr) minmax(100px, 1fr);
        grid-template-columns: 1fr;
      {% elsif column_balance < 0 and section.blocks.size >= 1 %}
        grid-template-rows: minmax(200px, 1fr) minmax(100px, {{column_percentage}}fr);
        grid-template-columns: 1fr;
      {% endif %}
    }
    {% case aside_position_mobile %}
      {% when "top" %}
        #shopify-section-{{section.id}} .image-comparison__content .image-comparison__slider {
          order: 1;
        }

        #shopify-section-{{section.id}} .image-comparison__content .image-comparison__aside {
          order: 0;
        }
      {% when "bottom" %}
        #shopify-section-{{section.id}} .image-comparison__content .image-comparison__slider {
          order: 0;
        }

        #shopify-section-{{section.id}} .image-comparison__content .image-comparison__aside {
          order: 1;
        }
    {% endcase %}
  {% endif %}

  @media only screen and (min-width: 769px) {
    #shopify-section-{{section.id}} {
      margin-top: {{top_margin}}px;
      margin-bottom: {{bottom_margin}}px;
    }

    {% if has_aside %}
      #shopify-section-{{section.id}} .image-comparison__content {
        {% if column_balance == 0 and section.blocks.size >= 1 %}
          grid-template-columns: minmax(200px, 1fr) minmax(0px, 1fr);
          grid-template-rows: auto;
        {% elsif column_balance > 0 and section.blocks.size >= 1 %}
          grid-template-columns: minmax(200px, {{column_percentage}}fr) minmax(100px, 1fr);
          grid-template-rows: auto;
        {% elsif column_balance < 0 and section.blocks.size >= 1 %}
          grid-template-columns: minmax(200px, 1fr) minmax(100px, {{column_percentage}}fr);
          grid-template-rows: auto;
        {% endif %}
      }
    {% case aside_position %}
      {% when "left" %}
        #shopify-section-{{section.id}} .image-comparison__content .image-comparison__slider {
          order: 1;
        }

        #shopify-section-{{section.id}} .image-comparison__content .image-comparison__aside {
          order: 0;
        }
      {% when "right" %}
        #shopify-section-{{section.id}} .image-comparison__content .image-comparison__slider {
          order: 0;
        }

        #shopify-section-{{section.id}} .image-comparison__content .image-comparison__aside {
          order: 1;
        }
    {% endcase %}
  {% endif %}
  }
{% endstyle %}

<div class="image-comparison--inner">
  <div class="image-comparison__content">
    <image-comparison class="image-comparison__slider">
      {{ left_image }}
      <div class="image-comparison__slider-divider">
        <div class="image-comparison__slider-divider__line"></div>
        <div class="image-comparison__slider-divider__circle">
          {% render 'icon_v2', icon: 'compare-image-arrow', class: 'divider-arrow-left', color: arrows_color %}
          {% render 'icon_v2', icon: 'compare-image-arrow', class: 'divider-arrow-right', color: arrows_color %}
        </div>
      </div>
      {{ right_image }}
    </image-comparison>

    {% if has_aside %}
      {{ aside }}
    {% endif %}
  </div>
</div>

