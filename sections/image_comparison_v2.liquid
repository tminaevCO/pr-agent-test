{% liquid
  assign first_image = section.settings.first_image
  assign second_image = section.settings.second_image
  assign aside_position = section.settings.aside_position
  assign aside_position_mobile = section.settings.aside_position_mobile

  assign column_balance = section.settings.column_balance
  assign column_gap = section.settings.column_gap

  assign absolute_column_balance = column_balance | abs
  assign absolute_percentage = absolute_column_balance | divided_by: 50.0
  assign column_percentage = 3 | times: absolute_percentage

  if column_percentage < 1
    assign column_percentage = column_percentage | times: 0.1 | plus: 1.0
  endif

  assign background_color = section.settings.background_color
  assign arrows_color = section.settings.arrows_color
  assign divider_thickness = section.settings.divider_thickness

  assign top_margin = section.settings.top_margin
  assign bottom_margin = section.settings.bottom_margin

  assign left_image_content_alignment = section.settings.left_image_content_alignment
  assign right_image_content_alignment = section.settings.right_image_content_alignment
  assign aside_desktop_content_alignment = section.settings.aside_desktop_content_alignment
  assign aside_mobile_content_alignment = section.settings.aside_mobile_content_alignment

  if arrows_color.alpha == null or arrows_color.alpha == 0.0
    assign arrows_color = settings.icon_color
  endif

  assign first_image_aspect_ratio = 1 | divided_by: first_image.aspect_ratio | times: 100
  assign second_image_aspect_ratio = 1 | divided_by: second_image.aspect_ratio | times: 100

  if first_image_aspect_ratio == null
    assign first_image_aspect_ratio = 60
  endif

  if second_image_aspect_ratio == null
    assign second_image_aspect_ratio = 60
  endif

  if first_image_aspect_ratio > second_image_aspect_ratio
    assign max_aspect_ratio = first_image_aspect_ratio
  else
    assign max_aspect_ratio = second_image_aspect_ratio
  endif

  if max_aspect_ratio > 60
    assign section_aspect_ratio = 60
  else
    assign section_aspect_ratio = max_aspect_ratio
  endif

  assign section_aspect_ratio = first_image_aspect_ratio

  assign has_aside = false

  assign section_background_color = section.settings.section_background_color
  assign fullwidth_background = section.settings.fullwidth_background
  assign top_padding = section.settings.top_padding
  assign bottom_padding = section.settings.bottom_padding
  assign side_padding = section.settings.side_padding
%}

{% stylesheet %}
  .image-comparison__slider {
    position: relative;
    display: block;
    overflow: hidden;
  }

  .image-comparison__slider-divider {
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 2;
    transform: translate(-50%, -50%);
    height: 103%;
  }

  .image-comparison__slider-divider__circle {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    cursor: ew-resize;
  }

  .divider-arrow-left,
  .divider-arrow-right {
    position: absolute;
    top: 50%;
  }

  .divider-arrow-left {
    left: 12px;
    transform: translateY(-50%);
  }

  .divider-arrow-right {
    right: 12px;
    transform: translateY(-50%) rotate(180deg);
  }

  .image-comparison__slider-divider__line {
    top: 0;
    left: 0;
    height: 100%;
  }

  .image-comparison__left-image,
  .image-comparison__right-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .image-comparison__left-image {
    z-index: 2;
    overflow: hidden;
    width: 50%;
  }

  .image-comparison__left-image--inner,
  .image-comparison__right-image--inner {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .image-comparison__left-image__image,
  .image-comparison__right-image__image {
    position: relative;
    height: 100%;
  }

  .image-comparison__left-image__image img,
  .image-comparison__left-image__image svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    vertical-align: middle;
  }

  .image-comparison__right-image__image img,
  .image-comparison__right-image__image svg {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    vertical-align: middle;
  }

  .image-comparison__left-image__content,
  .image-comparison__right-image__content {
    position: absolute;
    padding: 16px;
    bottom: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
    display: block;
    flex-direction: column;
    overflow: hidden;
  }

  .image-comparison__aside {
    display: flex;
    flex-direction: column;
  }

  .image-comparison__right-image .block__button,
  .image-comparison__left-image .block__button,
  .image-comparison__right-image .block__buttons,
  .image-comparison__left-image .block__buttons,
  .image-comparison__aside .block__button,
  .image-comparison__aside .block__buttons {
    display: flex;
    width: 100%;
  }

  .image-comparison__aside .block__button a[type='button'],
  .image-comparison__aside .block__buttons a[type='button'],
  .image-comparison__aside .block__button button,
  .image-comparison__aside .block__buttons button {
    max-width: 194px;
    width: max-content;
  }

  @media only screen and (min-width: 769px) {
    .image-comparison__left-image__content,
    .image-comparison__right-image__content {
      padding: 32px;
    }
  }
{% endstylesheet %}

{%- capture left_image -%}
