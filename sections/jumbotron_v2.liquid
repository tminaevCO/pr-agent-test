{% stylesheet %}
  .jumbotron .jumbotron--inner {
    position: relative;
    z-index: 2;
    display: flex;
    padding: 0 32px;
  }

  .jumbotron .jumbotron__content {
    position: relative;
    z-index: 2;
    width: max-content;
    height: auto;
    display: block;
    flex-direction: column;
    justify-content: center;
  }

  .jumbotron__content .block__title {
    letter-spacing: -1px;
  }

  div.jumbotron__content div.block__button {
    width: 100%;
    display: flex;
    align-items: center;
  }

  div.jumbotron__content div.block__button a[type='button'] {
    flex: 0 0 auto;
    max-width: 154px;
  }

  .jumbotron__content .block__buttons {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    width: 100%;
    gap: 16px;
  }

  .jumbotron__content .block__buttons a[type='button'] {
    flex: 0 0 auto;
  }

  .jumbotron .block__counter {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }

  .jumbotron__scroll-icon {
    position: absolute;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%);
    width: 32px;
    height: 32px;
    z-index: 2;
    cursor: pointer;
  }

  .jumbotron__scroll-icon svg {
    width: 100%;
    height: 100%;
  }

  @media only screen and (max-width: 530px) {
    .jumbotron .jumbotron--inner {
      padding: 0 16px;
    }
  }
{% endstylesheet %}

