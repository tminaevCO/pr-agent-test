{% javascript %}
  class DateCounter extends HTMLElement {
    constructor() {
      super();
      this.days = this.querySelector('#Days');
      this.hours = this.querySelector('#Hours');
      this.minutes = this.querySelector('#Mins');
      this.seconds = this.querySelector('#Secs');

      this.timezone = this.dataset.timezone;
      this.yearsValue = this.dataset.years;
      this.monthsValue = this.dataset.months - 1;
      this.daysValue = this.days.dataset.value;
      this.hoursValue = this.hours.dataset.value;
      this.minutesValue = this.minutes.dataset.value;

      this.timerDate = new Date(
        this.yearsValue,
        this.monthsValue,
        this.daysValue,
        this.hoursValue,
        this.minutesValue,
        0
      );

      this.isHideOnComplete = this.dataset.hideOnCompletion;
    }

    setDateValue(target, value) {
      target.textContent = value >= 10 ? value : `0${value}`;
    }

    initCounter() {
      const currentDate = new Date();
      const [sign, hoursStr] = this.timezone.split(' ');
      const hours = parseInt(hoursStr, 10);
      const offsetMilliseconds = hours * 60 * 60 * 1000 * (sign === '+' ? 1 : -1);
      const nowDate = new Date(currentDate.getTime() + offsetMilliseconds);
      const futureDate = new Date(this.timerDate.getTime() + offsetMilliseconds);
      const difference = futureDate - nowDate;
      if (difference > 0) {
        this.classList.remove('hide');
        const days = Math.floor(difference / (1000 * 60 * 60 * 24));
        const hours = Math.floor((difference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((difference % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((difference % (1000 * 60)) / 1000);
        this.setDateValue(this.days, days);
        this.setDateValue(this.hours, hours);
        this.setDateValue(this.minutes, minutes);
        this.setDateValue(this.seconds, seconds);
      } else {
        this.classList.remove('hide');
        this.setDateValue(this.days, 0);
        this.setDateValue(this.hours, 0);
        this.setDateValue(this.minutes, 0);
        this.setDateValue(this.seconds, 0);
        this.classList.remove('hide');
        if (this.isHideOnComplete === 'true') {
          this.classList.add('hide');
        }
        clearInterval(this.interval);
      }
    }

    connectedCallback() {
      this.interval = setInterval(() => this.initCounter(), 1000);
    }
  }

  if (customElements.get('date-counter') === undefined) {
    customElements.define('date-counter', DateCounter);
  }

  document.addEventListener('DOMContentLoaded', () => {
    const scrollIcons = document.querySelectorAll('.jumbotron__scroll-icon');
    if (scrollIcons.length) {
      scrollIcons.forEach((scrollIcon) => {
        scrollIcon.addEventListener('click', (e) => {
          e.preventDefault();
          let target = e.target.closest('section').nextElementSibling;
          if (e.currentTarget.dataset.target.length) {
            target = document.querySelector(`${e.currentTarget.dataset.target}`);
          }
          if (target) {
            const Ycoords = target.getBoundingClientRect().top + window.pageYOffset - 74;
            window.scrollTo({
              top: Ycoords,
              behavior: 'smooth',
            });
          }
        });
      });
    }
  });
{% endjavascript %}

