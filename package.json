{
  "name": "ds-custom-theme",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "cli": "shopify theme dev -e dev --theme-editor-sync",
    "cli-no-sync": "shopify theme dev -e dev",
    "relogin": "shopify auth logout && shopify theme dev -e dev",
    "build:tailwind": "tailwindcss -i ./src/styles/main.css -o ./assets/tailwind.min.css --minify",
    "build:styles": "node build-styles.js",
    "build:css": "npm run build:tailwind && npm run build:styles",
    "build:js": "webpack",
    "build": "npm run build:css && npm run build:js",
    "watch:tailwind": "tailwindcss -i ./src/styles/main.css -o ./assets/tailwind.min.css --watch",
    "watch:styles": "chokidar \"src/styles/**/*.css\" \"src/styles/**/*.scss\" -c \"npm run build:styles\"",
    "watch:js": "webpack --watch",
    "watch": "concurrently \"npm run watch:tailwind\" \"npm run watch:styles\" \"npm run watch:js\""
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "@vimeo/player": "^2.24.0",
    "alpinejs": "^3.14.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.14.0",
    "prettier-plugin-liquid": "^0.0.1-security",
    "stylelint": "^16.10.0",
    "tailwindcss": "^3.4.13"
  },
  "devDependencies": {
    "@babel/core": "^7.25.8",
    "@babel/preset-env": "^7.25.8",
    "@shopify/prettier-plugin-liquid": "^1.6.1",
    "babel-loader": "^9.2.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.0.1",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "cssnano": "^7.0.6",
    "glob": "^11.0.0",
    "mini-css-extract-plugin": "^2.9.1",
    "nodemon": "^3.1.7",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "sass": "^1.79.5",
    "style-loader": "^4.0.0",
    "swiper": "^11.1.14",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}
