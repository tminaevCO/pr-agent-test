{%- capture layout_content -%}

  {%- sections 'header-group' -%}

  <main
    id='MainContent'
    role='main'
    class='overflow-x-hidden'
  >
  {{ content_for_layout }}
  </main>

  {%- sections 'overlay-group' -%}

  {%- render 'locales' -%}

  {%- sections 'footer-group' -%}

{%- endcapture -%}

<!doctype html>
<html
  class="no-js"
  lang="{{ request.locale.iso_code }}"
>
  <head>
    <meta charset="utf-8">
    <meta
      http-equiv="X-UA-Compatible"
      content="IE=edge"
    >
    <meta
      name="viewport"
      content="width=device-width,initial-scale=1"
    >

    <link
      rel="canonical"
      href="{{ canonical_url }}"
    >
    <link
      rel="preconnect"
      href="https://cdn.shopify.com"
      crossorigin
    >

    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
      >
    {%- endif -%}

    <title>{{ page_title }}</title>

    {% if page_description %}
      <meta
        name="description"
        content="{{ page_description | escape }}"
      >
    {% endif %}

    {{ content_for_header }}

    <script>
      document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
    </script>

    {%- render 'theme-styles', layout_content: layout_content -%}
  </head>

  <body class="template-{{ template.name | handle }} template-{{ template.suffix | handle }} cursor-default ">
    {{ layout_content }}

    {%- render 'theme-scripts', layout_content: layout_content -%}
  </body>
</html>
